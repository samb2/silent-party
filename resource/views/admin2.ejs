</nav>
<div class="container">
    <div class="row">
        <div class="col text-center mt-4">
            <audio id="audio" autoplay controls>
                <source type="audio/mpeg" class="audio-source">
                Your browser does not support the audio element.
            </audio>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-lg-8">
            <div class="table-responsive bg-body-tertiary border rounded-3">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>image</th>
                        <th>name</th>
                        <th>size</th>
                        <th>duration</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% musicsInfo.forEach((music)=>{ %>
                        <tr onclick="play(`<%= music.name; %>`)">
                            <% if(music.image){ %>
                                <td class='td-middle'>
                                    <img src="data:<%= music.image.mime; %>;base64,<%= music.image.imageBuffer.toString('base64'); %>"
                                         alt="<%= music.image.description; %>" width="50" height="50" />
                                </td>
                            <% }else{ %>
                                <td class='td-middle'>
                                    <img src="#" width="50" height="50" />
                                </td>
                            <% } %>
                            <td><%= music.name; %></td>
                            <td class='td-middle'><%= music.size; %> mb</td>
                            <td class='td-middle'><%= music.duration; %></td>
                        </tr>
                    <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col align-self-center"><span>chat box</span></div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="connectModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <span class="modal-title fs-5" id="exampleModalLabel">Connect to Party</span>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <p>make sure your device connected to the <span style='color: #0a58ca'>Same Network!</span></p>
                <hr>
                <p> Scan Qr Code for Connect to Party :</p>
                <img src="<%= qrCode; %>" alt="QR Code">
                <div class="container-or">
                    <div class="horizontal-line"></div>
                    <div class="or-text">or</div>
                    <div class="horizontal-line"></div>
                </div>
                <p> input the following address in your Browser :</p>
                <h5><%= url; %></h5>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="uploadModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <span class="modal-title fs-5" id="exampleModalLabel">Add Music</span>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body upload">
                <div class="drag-area">
                    <div class="icon"><i class="fas fa-cloud-upload-alt"></i></div>
                    <header>Drag & Drop music here</header>
                    <span>OR</span>
                    <button>Browse Music</button>
                </div>
                <div class='d-none'>
                    <form id="upload-form" method="post" enctype="multipart/form-data">
                        <div>
                            <input type="file" id="audioInput" name="audio">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="settingModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <span class="modal-title fs-5" id="exampleModalLabel">Setting</span>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class='container'>
                    <div class='row'>
                        <div style='display: inherit'>convert musics when upload</div>
                        <div style='display: contents' class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked">
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
